package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Student;

public class ExercicioFixacao {

	public ExercicioFixacao() {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		Student[] student = new Student[10];
		
		System.out.print("How many rooms will be rented? ");
		int roomsRented = sc.nextInt();
		
		System.out.println();
		
		for (int i = 0; i < student.length; i++) {
			
			sc.nextLine(); //consume line break
			
			System.out.println("Rent #" + (i + 1) + ":");
			System.out.print("Name: ");
			String name = sc.nextLine();
			System.out.print("Email: ");
			String email = sc.next();
			System.out.print("Room: ");
			int roomNumber = sc.nextInt();
			
			while ((i != 0) && roomNumber == student[i - 1].getRoomNumber()) {
				
				System.out.print("This Room is busy. Choose another: ");
				roomNumber = sc.nextInt();
			}
			
			student[roomNumber] = new Student(name, email, roomNumber);
		}
		
		System.out.println();
		
		System.out.println("Busy rooms:");
		for (int i = 0; i < student.length; i++) {
			
			System.out.println(student);
		}
		
		sc.close();
	}
}
