package application;

import java.util.Scanner;

public class ExercicioFixacao3 {

	public ExercicioFixacao3() {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Enter two numbers: ");
		String[] input = sc.nextLine().split(" ");
		int m = Integer.parseInt(input[0]);
		int n = Integer.parseInt(input[1]);
		
		int[][] mat = new int[m][n];
		
		System.out.println();
		
		System.out.println("Enter the matrix numbers:");
		for (int i = 0; i < m; i++) { //rows
			for (int j = 0; j < n; j++) { //columns
				
				mat[i][j] = sc.nextInt();
			}
		}
		
		System.out.println();
		
		System.out.print("Enter a matrix number: ");
		int number = sc.nextInt();
		
		for (int o = 0; o < m; o++) {
			for (int p = 0; p < n; p++) {
				
				if (mat[o][p] == number) {
					
					System.out.println("Position " + o + ", " + p + ":");
					
					if ((p - 1) >= 0)
						System.out.print("Left: " + mat[o][p - 1]);
					
					
						System.out.print("Right: " + mat[o][p + 1]);
					
					
					System.out.print("Down: " + mat[o + 1][p]);
					System.out.print("Left: " + mat[o][p - 1]);
				}
			}
		}
		
		sc.close();
	}
}
